<h2><%= book.title %></h2>
<img height="360" width="280" src="<%= book.coverImagePath%>">
<br>
<div>Author: <%= book.author.name %> </div>
<% try{ %>

     <div>Publish Date: <%= book.publishDate.toDateString() %> </div>

<%   }catch{   %>
    <div>Publish Date: Non-Defined </div>
<% } %> 
<div>Page Count: <%= book.pageCount %> </div>
<h5>Discription : <%= book.description %> </h5>


<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm',{url:`/books/${book.id}`})  %> 
